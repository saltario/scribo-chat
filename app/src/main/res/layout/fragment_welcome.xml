<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/app_header_margin_top"
    tools:context=".ui.screens.auth.WelcomeFragment">

    <TextView
        android:id="@+id/welcome_text"
        android:text="@string/welcome_text_welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/style_header_text" />

    <TextView
        android:id="@+id/welcome_text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/app_horizontal_margin"
        android:layout_marginEnd="@dimen/app_horizontal_margin"
        android:text="@string/welcome_text_description"
        android:textAlignment="viewStart"
        android:textColor="@color/color_black"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_text" />

    <Button
        android:id="@+id/login_btn_login"
        style="@style/style_button_focusable"
        android:text="@string/welcome_text_continue"
        android:layout_marginBottom="@dimen/app_horizontal_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/app_horizontal_margin"
        android:layout_marginStart="@dimen/app_horizontal_margin"
        android:layout_marginEnd="@dimen/app_horizontal_margin"
        android:text="@string/welcome_privacy_hyperlink"
        android:textAlignment="center"
        android:textColor="@color/color_primary"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/login_btn_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_sheet_choice"
    style="@style/bottom_sheet">

    <LinearLayout
        android:id="@+id/btn_bottom_sheet_attach_image"
        style="@style/bottom_sheet_button">

        <ImageView
            style="@style/bottom_sheet_button_icon"
            android:src="@drawable/icon_image_black"
            android:contentDescription="@string/app_content_description" />

        <TextView
            style="@style/bottom_sheet_button_text"
            android:text="@string/button_picture"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_bottom_sheet_attach_file"
        style="@style/bottom_sheet_button">

        <ImageView
            style="@style/bottom_sheet_button_icon"
            android:src="@drawable/icon_file_black"
            android:contentDescription="@string/app_content_description" />

        <TextView
            style="@style/bottom_sheet_button_text"
            android:text="@string/button_file"/>

    </LinearLayout>

</LinearLayout>
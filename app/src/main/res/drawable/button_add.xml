<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/dark_red_button_ripple">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/dark_red_button"/>
                    <size android:width="@dimen/button_background_width" android:height="@dimen/button_background_height" />
                    <padding android:bottom="@dimen/button_circle_padding"/>
                    <padding android:left="@dimen/button_circle_padding"/>
                    <padding android:right="@dimen/button_circle_padding"/>
                    <padding android:top="@dimen/button_circle_padding"/>
                </shape>
            </item>
            <item android:drawable="@drawable/icon_add" />
        </layer-list>
    </item>
</ripple>


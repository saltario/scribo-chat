<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginTop">@dimen/app_vertical_margin</item>
        <item name="android:layout_marginHorizontal">@dimen/app_horizontal_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="button_stroke" parent="button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginHorizontal">0dp</item>
    </style>

    <style name="button_circle" parent="button">
        <item name="android:layout_width">@dimen/button_circle_size</item>
        <item name="android:layout_height">@dimen/button_circle_size</item>
        <item name="android:layout_marginVertical">0dp</item>
    </style>

    <style name="button_circle_toolbar" parent="button_circle">
        <item name="android:layout_marginEnd">@dimen/app_horizontal_margin</item>
    </style>

    <style name="red_button" parent="button">
        <item name="android:background">@drawable/bg_ripple_red_button</item>
    </style>

    <style name="red_stroke_button" parent="button_stroke">
        <item name="android:background">@drawable/bg_ripple_red_stroke_button</item>
    </style>

    <style name="white_button" parent="button">
        <item name="android:background">@drawable/bg_ripple_white_button</item>
    </style>

    <style name="grey_button" parent="button">
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/bg_ripple_grey_button</item>
        <item name="android:layout_marginHorizontal">0dp</item>
    </style>

    <style name="orange_button" parent="button">
        <item name="android:background">@drawable/bg_ripple_orange_button</item>
    </style>

    <style name="orange_stroke_button" parent="button_stroke">
        <item name="android:background">@drawable/bg_ripple_orange_stroke_button</item>
    </style>

    <style name="transparent_button" parent="button">
        <item name="android:background">@drawable/bg_ripple_stroke_button</item>
    </style>

    <style name="toolbar_button_back">
        <item name="android:layout_width">@dimen/icon_button_size</item>
        <item name="android:layout_height">@dimen/icon_button_size</item>
        <item name="android:src">@drawable/icon_back</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>
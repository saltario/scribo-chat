<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="message_block">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">@dimen/chat_message_vertical_margin</item>
    </style>

    <style name="message_user_block" parent="message_block">
        <item name="android:layout_marginEnd">@dimen/app_horizontal_normal_margin</item>
    </style>

    <style name="message_other_block" parent="message_block">
        <item name="android:layout_marginStart">@dimen/app_horizontal_normal_margin</item>
    </style>

    <style name="message">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_chat_message_text_color</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="message_time" parent="message">
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:textSize">@dimen/text_size_time</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="message_text" parent="message">
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:textSize">@dimen/text_size_input</item>
        <item name="android:maxWidth">300dp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="message_user_text" parent="message_text">
        <item name="android:background">@drawable/bg_message_user</item>
    </style>

    <style name="message_other_text" parent="message_text">
        <item name="android:background">@drawable/bg_message_other</item>
    </style>

</resources>
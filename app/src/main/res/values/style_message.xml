<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="message_block">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">@dimen/chat_message_vertical_margin</item>
    </style>

    <style name="message_user_block" parent="message_block">
        <item name="android:layout_marginEnd">@dimen/app_horizontal_normal_margin</item>
    </style>

    <style name="message_other_block" parent="message_block">
        <item name="android:layout_marginStart">@dimen/app_horizontal_normal_margin</item>
    </style>

    <style name="message_file_user_block" parent="message_user_block">
        <item name="android:background">@drawable/bg_message_user</item>
    </style>

    <style name="message_file_other_block" parent="message_other_block">
        <item name="android:background">@drawable/bg_message_other</item>
    </style>

    <style name="message_button">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="message_progress_bar" parent="message_button">
        <item name="android:indeterminateTint">@color/dark_text_color_white</item>
    </style>

    <style name="message">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_chat_message_text_color</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="message_time" parent="message">
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:textSize">@dimen/text_size_time</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="message_time_text" parent="message_time">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="message_time_image" parent="message_time">
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="message_time_file" parent="message_time">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="message_text" parent="message">
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:textSize">@dimen/text_size_input</item>
        <item name="android:maxWidth">300dp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="message_user_text" parent="message_text">
        <item name="android:background">@drawable/bg_message_user</item>
    </style>

    <style name="message_other_text" parent="message_text">
        <item name="android:background">@drawable/bg_message_other</item>
    </style>

    <style name="message_file_name" parent="message_text">
        <item name="maxLines">2</item>
    </style>

    <style name="message_image">
        <item name="android:layout_width">@dimen/chat_message_image_width</item>
        <item name="android:layout_height">@dimen/chat_message_image_height</item>
    </style>

    <style name="message_image_card">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">@dimen/chat_message_image_radius</item>
    </style>

    <style name="message_user_image" parent="message_image">

    </style>

    <style name="message_other_image" parent="message_image">

    </style>

    <style name="input_message" parent="input">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/bg_edit_message</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/dark_text_color_white</item>
        <item name="android:textColorHint">@color/dark_chat_message_text_color</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:inputType">text</item>
    </style>

</resources>
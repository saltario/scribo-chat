<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="input_change">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textColor">@color/dark_text_color_white</item>
        <item name="android:textColorHint">@color/dark_text_color_white</item>
        <item name="android:textSize">@dimen/text_size_input</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingHorizontal">@dimen/input_padding_horizontal</item>
        <item name="android:paddingVertical">@dimen/input_padding_vertical</item>
        <item name="android:layout_marginHorizontal">@dimen/app_horizontal_margin</item>
    </style>

    <style name="input_message">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/bg_edit_message</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/dark_text_color_white</item>
        <item name="android:textColorHint">@color/dark_chat_message_text_color</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:inputType">text</item>
    </style>

</resources>
<resources>

    <style name="AppThemeDark" parent="MaterialDrawerTheme">

        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryDark">@color/dark_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:colorBackground">@color/dark_background</item>

        <item name="popupTheme">@style/actionMenu</item>
        <item name="colorControlActivated">@color/color_primary</item>

    </style>



    <style name="bottom_nav_menu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">visible</item>
        <item name="android:background">@color/dark_background_toolbars</item>
    </style>

    <style name="base_toolbar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">@color/dark_background_toolbars</item>
    </style>

    <style name="toolbar_circle_button">
        <item name="android:layout_width">@dimen/button_circle_width</item>
        <item name="android:layout_height">@dimen/button_circle_height</item>
        <item name="android:padding">@dimen/app_padding</item>
        <item name="android:layout_marginEnd">@dimen/app_horizontal_margin</item>
    </style>

    <!-- Text-->
    <style name="header_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/app_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_horizontal_margin</item>
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:textColor">@color/dark_text_color</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="large_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/app_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_horizontal_margin</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/dark_text_color</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="normal_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/app_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_horizontal_margin</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/dark_text_color</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="small_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/app_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_horizontal_margin</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/dark_small_text_color</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="hyperlink_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/app_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_horizontal_margin</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/settings_hyperlink</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <!-- Settings buttons-->
    <style name="settings_buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">@dimen/app_vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/app_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_horizontal_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/background_ripple_settings_label</item>
    </style>

    <style name="settings_button_exit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">@dimen/app_vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/app_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_horizontal_margin</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/background_ripple_settings_exit_profile</item>
    </style>


    <!-- Action menu -->
    <style name="actionMenu" parent="Theme.AppCompat.Light">
        <item name="background">@color/color_background_light</item>
        <item name="actionMenuTextColor">@color/color_light_grey</item>
    </style>

    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_marginTop">@dimen/app_vertical_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_horizontal_margin</item>
        <item name="android:layout_marginStart">@dimen/app_horizontal_margin</item>
    </style>



    <style name="edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_margin">@dimen/app_horizontal_margin</item>
        <item name="android:padding">@dimen/app_padding</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/color_light_grey</item>
    </style>


    <style name="style_header_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/app_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/app_horizontal_margin</item>
        <item name="android:lines">2</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_button_focusable">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/app_vertical_margin</item>
        <item name="android:background">@drawable/custom_button_focusable</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="style_button_not_focusable">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/app_vertical_margin</item>
        <item name="android:background">@drawable/custom_button_not_focusable</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="style_edit_text">
        <item name="android:layout_width">@dimen/app_input_phone_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_edit_text</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/app_input_phone_padding</item>
        <item name="android:textColor">@color/color_primary</item>
        <item name="android:textColorHint">@color/color_primary</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>




</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/app_horizontal_margin</item>
    </style>

    <style name="text_title" parent="text">
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:textColor">@color/dark_text_color_white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="text_header" parent="text_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/app_vertical_large_margin</item>
        <item name="android:layout_marginHorizontal">@dimen/app_horizontal_large_margin</item>
    </style>


    <style name="text_large" parent="text">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/dark_text_color_white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="text_button_white" parent="text">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textColor">@color/dark_text_color_white</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="text_button_black" parent="text">
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:textColor">@color/dark_text_color_black</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="text_input" parent="text">
        <item name="android:textSize">@dimen/text_size_input</item>
        <item name="android:textColor">@color/dark_text_color_white</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="text_description" parent="text">
        <item name="android:textSize">@dimen/text_size_description</item>
        <item name="android:textColor">@color/dark_text_color_white</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="text_normal" parent="text">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/dark_text_color_white</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="text_small" parent="text">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/dark_small_text_color</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="text_hyperlink" parent="text">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/hyperlink</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

</resources>